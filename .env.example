# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASS=your_password
DB_NAME=dbf_artifact_db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/dbf/dbfartifactapi.log
LOG_MAX_SIZE=10
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# Server Configuration
PORT=8080

# DBF Web Configuration
DBFWEB_TEMP_DIR=/etc/saids/idsconfig/tmp/dbfweb

# Concurrency Configuration (0 = auto-detect based on CPU cores)
# Privilege table loading concurrency: default auto (0.5 x CPU cores, min=2, max=20)
PRIVILEGE_LOAD_CONCURRENCY=0

# Policy query execution concurrency: default auto (1 x CPU cores, min=4, max=50)
PRIVILEGE_QUERY_CONCURRENCY=0

# Examples for manual tuning:
# - Small server (2-4 cores): PRIVILEGE_LOAD_CONCURRENCY=2, PRIVILEGE_QUERY_CONCURRENCY=4
# - Medium server (8-16 cores): PRIVILEGE_LOAD_CONCURRENCY=8, PRIVILEGE_QUERY_CONCURRENCY=16
# - Large server (32+ cores): PRIVILEGE_LOAD_CONCURRENCY=16, PRIVILEGE_QUERY_CONCURRENCY=32